{
	"private": true,
	"name": "vbb-web",
	"description": "A web client for Berlin & Brandenburg public transport.",
	"version": "0.1.0",
	"keywords": [
		"vbb",
		"bvg",
		"public",
		"transport",
		"berlin"
	],
	"main": "app.js",
	"author": "Jannis R <mail@jannisr.de>",
	"homepage": "https://github.com/derhuerst/vbb-web",
	"repository": "derhuerst/vbb-web",
	"issues": "https://github.com/derhuerst/vbb-web/issues",
	"license": "ISC",
	"engines": {
		"node": ">=6"
	},
	"dependencies": {
		"compression": "^1.6.2",
		"express": "^4.15.3",
		"moment-timezone": "^0.5.13",
		"ms": "^2.0.0",
		"nocache": "^2.0.0",
		"pithy": "^0.0.4",
		"serve-static": "^1.12.3",
		"vbb-client": "^2.0.0",
		"vbb-short-station-name": "^0.4.0",
		"vbb-stations": "^6.1.0"
	},
	"devDependencies": {
		"babel-core": "^6.26.0",
		"babel-preset-env": "^1.6.1",
		"babelify": "^8.0.0",
		"browserify": "^15.2.0",
		"component-emitter": "^1.2.1",
		"envify": "^4.1.0",
		"horsey": "^3",
		"uglify-es": "^3.0.15",
		"vbb-logos": "github:derhuerst/vbb-logos#v2"
	},
	"scripts": {
		"icons": "rm -f client/*.svg; cp node_modules/vbb-logos/*.svg client/",
		"bundle": "env NODE_ENV=production browserify -g [babelify --presets env] -g envify client/index.js | uglifyjs -mc > client/bundle.min.js",
		"build": "npm run icons && npm run bundle",
		"prepublishOnly": "npm run build",
		"start": "node index.js"
	}
}
