{
	"name":        "vbb-web",
	"description": "A web client for Berlin & Brandenburg public transport.",
	"version":     "0.1.0",
	"keywords":    ["vbb", "bvg", "public", "transport", "berlin"],
	"main":        "app.js",
	"author": "Jannis R <mail@jannisr.de>",
	"homepage":    "https://github.com/derhuerst/vbb-web",
	"repository":  "derhuerst/vbb-web",
	"issues":      "https://github.com/derhuerst/vbb-web/issues",
	"license":     "ISC",
	"engines" :    {"node": ">=6"},
	"dependencies": {
		"config": "^1.24.0",
		"express": "^4.14",
		"compression": "^1.6.2",
		"serve-static": "^1.11.1",
		"nocache": "^2.0.0",
		"co-express": "^1.2.2",
		"vbb-stations": "^3.1.0",
		"vbb-client": "^1.0.0",
		"pithy": "^0.0.4",
		"vbb-parse-line": "^0.2",
		"moment-timezone": "^0.5.5",
		"vbb-short-station-name": "^0.2.0"
	},
	"devDependencies": {
		"vbb-logos": "derhuerst/vbb-logos",
		"component-emitter": "^1.2.1",
		"horsey": "^3",
		"browserify": "^13.1.1",
		"uglify-js": "mishoo/UglifyJS2#harmony"
	},
	"scripts": {
		"icons":  "rm client/*.svg; cp node_modules/vbb-logos/*.svg client/",
		"clean":  "rm client/*.bundle.js; rm client/*.bundle.min.js",
		"bundle": "browserify client/index.js -o client/index.bundle.js",
		"uglify": "uglifyjs -mc --screw-ie8 -o client/index.bundle.min.js -- client/index.bundle.js",
		"build": "npm run icons; npm run clean; npm run bundle; npm run uglify",
		"prepublish": "npm run build",

		"start":  "forever start --uid vbb-web -a app.js",
		"stop":   "forever stop vbb-web",
		"ssh":    "ssh root@vbb-web.jannisr.de",
		"deploy": "./deploy"
	}
}
